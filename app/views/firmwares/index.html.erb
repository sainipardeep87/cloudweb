<div class="list_mach_head">
  <h1>Listing firmwares</h1>
</div>
<div class="float_right">
  <%= link_to 'New Firmware', new_firmware_path %>
</div>



<table id="firmware_table">
  <thead>

    <th>Firmwareversion</th>
    <th>Binaryfile</th>
    <th>Serialids</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>

  <tbody>
<% @firmwares.each do |firmware| %>
  <tr>
    <td><%= firmware.firmwareversion %></td>
    <td><%= firmware.binaryfile %></td>
    <td><%= firmware.serialids %></td>
    <td><%= link_to "Show", firmware%></td>
    <td><%= link_to "Edit",edit_firmware_path(firmware)%></td>
    <td><%= link_to "Destroy", firmware, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />


<script>
    $(document).ready(function(){
        $("#firmware_table").dataTable()
    });
</script>