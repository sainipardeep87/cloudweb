<div class="heading">
  <h1 class="list_mach_head">MileStones  </h1>
  <div class="float_right">
    <%= link_to 'New Milestone', new_milestone_path %>
  </div>
</div>
 <%unless @milestones.nil?%>
<table id="milestone_table">
  <thead>
    <th>title</th>
    <th>icon</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
<% @milestones.each do |milestone| %>
  <tr>
    <td><%= milestone.title%></td>
    <td><%= image_tag milestone.image_url, :height => 100,:width => 100 %></td>
    <td><%= link_to 'Show', milestone %></td>
    <td><%= link_to 'Edit', edit_milestone_path(milestone) %></td>
    <td><%= link_to 'Destroy', milestone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%end%>
</tbody>
<br />





<script>
    $(document).ready(function(){
        $("#milestone_table").dataTable()
    });
</script>