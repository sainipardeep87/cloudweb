<p id="notice"><%= notice %></p>

<p>
  <b>Device:</b>
  <%= @parent_profile.deviceid %>
</p>

<p>
  <b>Device type:</b>
  <%= @parent_profile.devise_type %>
</p>

<p>
  <b>Imei:</b>
  <%= @parent_profile.imei %>
</p>

<p>
  <b>Token:</b>
  <%= @parent_profile.tokenid %>
</p>

<p>
  <b>Status:</b>
  <%= @parent_profile.status %>
</p>

<p>
  <b>Name:</b>
  <td><%= @parent_profile.name %></td>
</p>

<p>
  <b>MachineOwner:</b>
  <td><%= @parent_profile.is_machine_owner %></td>
</p>
<p>
  <b>Machine_serial_id</b>
<td><%= @parent_profile.serialid %></td>
</p>

<div id= "child_profiles">
  <h1>Listing childs</h1>

  <table>
    <tr>
      <th>Child name</th>
      <th>Date of Birth</th>
      <th>Gender</th>
      <th>Brewing Preferences</th>
      <th>images</th>

    </tr>

    <% @parent_profile.child_profiles.each  do |child| %>
        <tr>
          <td><%= child.name %></td>
          <td><%= child.dob%></td>
`         <td><%= child.gender%></td>
         <td> <% unless  child.child_brewing_preference.nil?  %>
              <p>
                <b>milk quantity</b>
                <%= child.child_brewing_preference.milk  %>
              </p>
              <p>
                <b> temperature</b>
                <%= child.child_brewing_preference.temperature  %>
              </p>
              </p>

          <% end %>
         </td>
          <td><% child.pictures.each do |picture|%>
                <p>
                 <%= image_tag picture.image_url if picture.image? %>
                </p>

          <%end%>
          </td>
        </tr>
    <% end %>
  </table>

  <br />



</div>

