<h3>User Manager > <%= @parent_profile.name %> </h3>

<div class="content_row">
<p class="left">
  <b>Registered On:</b>
  <%= @parent_profile.created_at.strftime("%Y-%m-%d %H:%M") %>
</p>
  <p class="center">
    <b>Devise Type:</b>
    <%= @parent_profile.devise_type %>
  </p>

<p class="right">
  <b>Status:</b>
  <%= @parent_profile.status %>

</p>
</div>
 <div class="content_row">

<p class="left">
  <b>MachineOwner:</b>
  <td><%= @parent_profile.is_machine_owner %></td>
</p>
</div> <br>


<div id="machines">
  <h3> Machine</h3>
<%unless @machine.nil?%>
  <table id="user_machine_table">
    <thead>
        <th>Serial No</th>
        <th>Activated On</th>
        <th>Firmware</th>
        <th>HW config</th>
        <th>Mac</th>
        <th>Ip Address</th>
        <th>actions</th>
    </thead>

    <tbody>
        <tr>
            <td><%=@machine.serialid%></td>
            <td><%=@machine.activated_on%></td>
            <td><%=@machine.firmware%></td>
            <td><%=@machine.hwconfig%></td>
            <td><%=@machine.macaddress%></td>
            <td><%=@machine.ipaddress%></td>
            <td></td>
        </tr>
     </tbody>
  </table>
<%end%>
</div> <br>
<br>


<div id= "child_profiles">
  <h3>Children total(<%=@parent_profile.child_profiles.count%>)</h3>

  <table id="parent_child_table">
    <thead>
      <th>Child name</th>
      <th>Registered On</th>
      <th>Last Access On</th>
      <th>Status</th>
      <th>Action</th>
    </thead>

    <tbody>
    <% @parent_profile.child_profiles.each  do |child| %>
        <tr>
          <td><%= child.name %></td>
          <td><%= child.created_at%></td>
          <td></td>
          <td><%=child.status ? "active" : "inactive"%></td>
          <td>
                <%= link_to "Show" , parent_profile_child_profile_path(@parent_profile,child) %>

          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br />

</div>

<script>
    $(document).ready(function(){
        $("#user_machine_table").dataTable()
    });
</script>

<script>
    $(document).ready(function(){
        $("#parent_child_table").dataTable()
    });
</script>