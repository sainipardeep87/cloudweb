<p id="notice"><%= notice %></p>

<p>
  <b>Device:</b>
  <%= @parent_profile.device_id %>
</p>

<p>
  <b>Device type:</b>
  <%= @parent_profile.devise_type %>
</p>

<p>
  <b>Imei:</b>
  <%= @parent_profile.imei %>
</p>

<p>
  <b>Token:</b>
  <%= @parent_profile.token_id %>
</p>

<p>
  <b>Status:</b>
  <%= @parent_profile.status %>
</p>

<p>
  <b>Name:</b>
  <td><%= @parent_profile.name %></td>
</p>

<p>
  <b>MachineOwner:</b>
  <td><%= @parent_profile.is_machine_owner %></td>
</p>
<p>
  <b>Machine_serial_id</b>
<td><%= @parent_profile.machine_serial_id %></td>
</p>


<% @parent_profile.child_profiles.each  do |child| %>
    <p>
        <b>Child name:</b>
        <%= child.child_name %> </br>
      <p>
        <b> child brewing preferences </b>
      </p>

    <% unless  child.child_brewing_preference.nil?  %>
       <p>
        <b>milk quantity</b>
          <%= child.child_brewing_preference.milk_qty  %>
       </p>
       <p>
          <b> temperature</b>
          <%= child.child_brewing_preference.temperature  %>
       </p>
      </p>
    <% end %>
<% end %>

<%= link_to 'Edit', edit_parent_profile_path(@parent_profile) %> |
<%= link_to 'Back', parent_profiles_path %>
<%= link_to 'New Child profile', new_parent_profile_child_profile_path(@parent_profile) %>
