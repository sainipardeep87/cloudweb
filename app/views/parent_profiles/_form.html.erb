<%= form_for(@parent_profile) do |f| %>
  <% if @parent_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@parent_profile.errors.count, "error") %> prohibited this parent_profile from being saved:</h2>

      <ul>
      <% @parent_profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
     <div class="label_div"><%= f.label :name %></div>
     <div class="value_div"><%= f.text_field :name,:size => 20 %></div>
  </div>

  <div class="field">
    <div class="label_div"> <%= f.label :email %></div>
    <div class="value_div"> <%= f.text_field :email, :size => 20 %></div>
  </div>
  <div class="field">
    <div class="label_div"> <%= f.label :password %></div>
    <div class="value_div"> <%= f.text_field :password,:size => 20 %></div>
  </div>


  <div class="field">
    <div class="label_div"><%= f.label :machine_serial_id %></div>
    <div class="value_div"><%= f.number_field :serialid,:size => 20 %></div>
  </div>

  <div class="field">
    <div class="label_div"> <%= f.label :devicetypeid %></div>
    <div class="value_div"> <%= f.select :devicetypeid, ParentProfile::DEVICES.to_a %></div>
  </div>

  <div class="field">
    <div class="label_div"><%= f.label :status %></div>
    <div class="value_div"><%= f.select :status, [['Active', true], ['Inactive', false]] %></div>
  </div>


  <div class="field">
     <div class="label_div"> <%= f.label :relation %></div>
     <div class="value_div"> <%= f.select :relation, ParentProfile::RELATIONS.to_a %></div>
  </div>

    <div class="field">
      <div class="label_div"><%= f.label :language %></div>
      <div class="value_div"><%= f.select :lang, ParentProfile::LANG.to_a %></div>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
