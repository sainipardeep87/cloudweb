<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="field">
        <p>
            <%= f.label :email %><br>
            <%= f.text_field :email %>
        </p>
      </div>
      <div class="field">
        <p>
            <%= f.label :password %><br>
            <%= f.password_field :password %>
        </p>
      </div>

        <%= f.submit "Sign in" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
